<div class="contents public-reservation-new">
  <h2>予約情報の入力</h2>
    <%= form_with url: public_user_reservations_confirm_path, method: :get, local: true do |f| %>
    <table>
      <tbody>
        <tr>
          <td><h3>メニュー名</h3></td>
          <td></td>
          <td><%= @menu.title %></td>
        </tr>
        <tr>
          <td><h3>内容</h3></td>
          <td></td>
          <td><%= @menu.content %></td>
        </tr>
        <tr>
          <td><h3>キャンセル規定</h3></td>
          <td></td>
          <td><%= @menu.cancel %></td>
        </tr>
        <tr>
          <td><h3>人数</h3></td>
          <td></td>
          <td><%= f.number_field :people, value: '1', min: 1, size: "100" %></td>
        </tr>
        <tr>
          <td><h3>お支払い方法</h3></td>
          <td></td>
          <td><%= f.select :payment_method, Reservation.payment_methods.keys.map {|method| [method]} %></td>
        </tr>
        <tr>
          <td><h3>ご来店日時</h3></td>
          <td><h4>年月日</h4></td>
          <td>
            <%= f.number_field :reservation_year, min: Time.new.year, max: Time.new.year+1, value: Time.new.year %>年
            <%= f.number_field :reservation_month, min: 1, max: 12, value: Time.new.month %>月
            <%= f.number_field :reservation_day, min: 1, max: 31, value: Time.new.day %>日
          </td>
        </tr>
        <tr>
          <td></td>
          <td><h4>時間</h4></td>
          <td><%= f.time_select :reservation_time, minute_step: 15 %></td>
        </tr>
      </tbody>
    </table>
    <%= f.hidden_field :menu_id, value: @menu.id %>
    <%= f.submit '確認する' %>
  <% end %>
</div>
