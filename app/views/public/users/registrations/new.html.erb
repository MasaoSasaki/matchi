<div class="contents devise-form">
  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/users/shared/error_messages", resource: resource %>
  <table>
    <tbody>
      <tr>
        <td colspan="3"></td>
      </tr>
      <tr>
        <td><h3>お名前</h3><small>予約時の情報として使用されます。</small></td>
        <td><%= f.label :name_family, value: '姓：' %><%= f.text_field :name_family, placeholder: '必須' %></td>
        <td><%= f.label :name_first, value: '名：' %><%= f.text_field :name_first, placeholder: '必須' %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.label :name_family_kana, value: 'セイ：' %><%= f.text_field :name_family_kana, placeholder: '必須' %></td>
        <td><%= f.label :name_first_kana, value: 'メイ：' %><%= f.text_field :name_first_kana, placeholder: '必須' %></td>
      </tr>
      <tr>
        <td><h3><%= f.label :phone_number, value: '電話番号' %></h3></td>
        <td><%= f.number_field :phone_number, placeholder: '必須' %></td>
        <td></td>
      </tr>
      <tr>
        <td><h3><%= f.label :email, value: 'メールアドレス' %></h3><small>ログイン時のIDとして使用されます。また、予約の確認や、メールマガジンの配信も行われます。</small></td>
        <td><%= f.email_field :email, autocomplete: "email", placeholder: '必須' %></td>
        <td></td>
      </tr>
      <tr>
        <td>
          <h3><%= f.label :password, value: 'パスワード' %></h3>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </td>
        <td><%= f.password_field :password, autocomplete: "new-password", placeholder: '必須' %></td>
        <td></td>
      </tr>
      <tr>
        <td><h3><%= f.label :password_confirmation, 'パスワード（再入力）' %></h3></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '必須' %></td>
        <td></td>
      </tr>
    </tbody>
  </table>

  <div class="actions">
    <%= f.submit "登録する", class: 'btn registration-btn' %>
  </div>
  <% end %>

  <%= render "public/users/shared/links" %>

</div>
