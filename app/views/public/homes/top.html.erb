<%= hidden_field_tag :restaurants_json, value: "#{@restaurants_json}" %>
<div class="top">
  <section calss="top-header">
    <div class="header-image"></div>
  </section>
  <section class="top-main">
    <div class="flex">
      <div class="top-contents">
        <ul class="flex top-nav">
          <%= link_to about_path do %>
            <li>サービス紹介</li>
          <% end %>
          <%= link_to do %>
            <li>特集</li>
          <% end %>
          <%= link_to do %>
            <li>ランキング</li>
          <% end %>
          <%= link_to do %>
            <li>お知らせ</li>
          <% end %>
        </ul>
        <div class="restaurants-all">
          <h2>レストラン一覧</h2>
          <% @restaurants.each do |restaurant| %>
            <div class="top-restaurant">
              <%#= attachment_image_tag :restaurant_image %>
              <h3><%= link_to "#{restaurant.name}", public_restaurant_path(restaurant) %></h3>
              <p><%= restaurant.prefecture + restaurant.city %></p>
            </div>
          <% end %>
        </div>
      </div>

      <div class="top-side">
        <% if public_user_signed_in? %>
          <div class="simple-mypage">マイページ</div>
        <% else %>
          <div class="new-registration">
            <%= link_to '新規登録', new_public_user_registration_path, class: "btn registration" %>
            <p>登録済みの方は<%= link_to 'こちら', new_public_user_session_path%></p>
          </div>
        <% end %>
        <div>
          <p class="new-menus">最近更新されたメニュー</p>
          <div>
            <ul>
              <% @menus.each do |menu| %>
                <li>
                  <%= link_to "#{menu.title}", public_menu_path(menu) %></p>
                  <%#= attachment_image_tag :menu_image %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="serch">
          <p><a href="#" id="get-position" >周辺から探す</a></p>
          <p class="location-result true hidden">現在地：<span id="latitude"></span><br><span id="longitude"></span><br>住所：<span id="address"></span> 付近</p>
          <div id="map" class="location-result true hidden"></div>
          <p class="location-result false hidden">現在地情報を利用できません。</p>
        </div>
      </div>
    </div>
  </section>
</div>
