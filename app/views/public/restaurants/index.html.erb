<div class="contents public-restaurants-index">
  <h2><u><i>Restaurants</i></u></h2>
  <div class="flex restaurants-contents">
    <div class="restaurant-image"></div>
    <% @restaurants.each do |restaurant| %>
      <div class="restaurant-contents">
        <p><%= link_to "#{restaurant.name}", public_restaurant_path(restaurant) %></p>
        <p><%= restaurant.prefecture %></p>
        <p><%= link_to 'メニュー一覧', public_menus_path(restaurant) %></p>
      </div>
    <% end %>
  </div>
</div>
