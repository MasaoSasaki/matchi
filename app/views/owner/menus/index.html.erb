<div class="contents menus-index">
  <h1>Menus</h1>
  <div class="menus-create"><%= link_to 'メニュー作成', new_owner_restaurant_menu_path(@current_restaurant), class: 'btn' %></div>
  <table>
    <thead>
      <tr>
        <th>メニューID</th>
        <th>イメージ画像</th>
        <th>メニュー名</th>
        <th>予約状況</th>
        <th>販売状況</th>
      </tr>
    </thead>
    <% @menus.each do |menu| %>
      <tbody>
        <tr>
          <td><%= menu.id %></td>
          <td><%= attachment_image_tag menu, :menu_image, style: "height: 70px; width: 100px;", fallbak: "no_image.png" %></td>
          <td><%= link_to "#{menu.title}", owner_restaurant_menu_path(@current_restaurant, menu) %></td>
          <td><%= menu.reservation_method %></td>
          <td>
            <% if menu.is_sale_frag == true %>
              <%= '販売中' %>
            <% else %>
              <%= '停止中' %>
            <% end %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
