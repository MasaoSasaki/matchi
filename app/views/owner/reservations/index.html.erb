<div class="contents reservation-index">
  <h2>Reservated List</h2>
  <section class="reservation">
    <table>
      <thead>
        <tr>
          <th>予約ID</th>
          <th>ご予約確定日</th>
          <th>来店(予定)日</th>
          <th>予約者名</th>
          <th>人数</th>
          <th>予約ステータス</th>
          <th>メニュー名</th>
        </tr>
      </thead>
        <tbody>
        <% @reservations.each do |reservation| %>
          <% if @menus.find(reservation.menu_id).restaurant_id == current_owner_restaurant.id %>
            <tr>
              <td><%= reservation.id %></td>
              <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
              <td><%= "#{reservation.reservation_year}年" + "#{reservation.reservation_month}月" + "#{reservation.reservation_day}日" %></td>
              <td><%= "#{@users.find(reservation.user_id).name_family}" + "#{@users.find(reservation.user_id).name_first}" %> 様</td>
              <td><%= reservation.people %> 名</td>
              <td><%= reservation.reservation_status %></td>
              <td><%= @menus.find(reservation.menu_id).title %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </section>
  <section class="reservated-all"></section>
</div>