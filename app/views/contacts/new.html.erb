<div class="contents contacts-new">

  <%= render partial: 'layouts/error_messages', locals: {model: @contact} %>

  <h2>お問い合わせ</h2>

  <p>ご意見・ご要望・新規出店のご相談はこちらよりお問い合わせください。</p>
  <%= form_with model: @contact, url: confirm_contact_path(@contact), local: true do |f| %>

    <% if user_signed_in? %>
      <div class="form-group">
        <h3>返信希望のメールアドレス</h3>
        <p>登録済みのメールアドレスにご返信いたします。</p>
        <%= f.hidden_field :email, value: current_user.email %>
      </div>
    <% else %>
      <div class="form-group">
        <h3><%= f.label :email, 'ご連絡先メールアドレス' %></h3>
        <%= f.email_field :email, id: "contacts-new__email-form", placeholder: "example@example.com" %><br><span id="contacts-new__email-form--notice"></span>
      </div>
    <% end %>

  <div class="form-group">
    <h3><%= f.label :message, 'お問い合わせ内容' %></h3>
    <%= f.text_area :message, id: "contacts-new__message-form" %><br><span id="contacts-new__message-form--notice"></span>
  </div>

  <div><%= f.submit '確認する', id: "new-contacts-submit", class: "btn btn-outline-dark" %></div>

  <% end %>

</div>
